
     Console.WriteLine("=== Contador de Números Negativos ===");

Console.Write("Quantos números você deseja informar? ");
int quantidadeValores = int.Parse(Console.ReadLine());

int[] valores = new int[quantidadeValores];

int contadorNegativos = 0;

for (int i = 0; i < quantidadeValores; i++) ;

{
 Console.Write($"Digite o {i + 1}º número: ");

 valores[i] = int.Parse(Console.ReadLine());
 if (valores[i] < 0)
  {

   contadorNegativos++;

  }

}
Console.WriteLine($"\nVocê digitou {contadorNegativos} números negativos.");
Console.WriteLine("=== Programa finalizado ===");

