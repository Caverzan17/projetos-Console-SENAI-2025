// See https://aka.ms/new-console-template for more information
Console.Write("Digite o salário mensal atual do funcionário: ");
double salarioAtual = double.Parse(Console.ReadLine());

Console.Write("Digite o percentual de reajuste (%): ");
double percentual = double.Parse(Console.ReadLine());

double novoSalario = salarioAtual + (salarioAtual * percentual / 100);

Console.WriteLine("\nO novo salário é: R$ " + novoSalario.ToString("F2"));
